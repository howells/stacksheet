{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["src/**/*.{ts,tsx}", "index.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["**/*.test.{ts,tsx}"],
      "ignoreDependencies": ["husky", "tsx", "ultracite", "lint-staged"]
    },
    "site": {
      "entry": [
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}"
      ],
      "project": ["**/*.{ts,tsx}"],
      "ignore": ["**/*.test.{ts,tsx}"]
    }
  },
  "ignore": ["**/*.d.ts", "**/*.config.{ts,mjs,js}", "**/*.css"],
  "ignoreDependencies": ["@types/*", "typescript", "@biomejs/biome", "next"]
}
