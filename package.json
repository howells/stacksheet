{
  "name": "@howells/stacksheet",
  "version": "1.1.0",
  "private": false,
  "description": "Typed, animated sheet stack system. Zustand store + Motion animations with Apple-style depth stacking.",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "author": "Daniel Howells",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/howells/stacksheet.git"
  },
  "bugs": {
    "url": "https://github.com/howells/stacksheet/issues"
  },
  "homepage": "https://stacksheet.danielhowells.com",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build && pnpm --filter stacksheet-docs dev",
    "dev:lib": "tsup --watch",
    "format": "ultracite fix --unsafe",
    "lint": "biome check src --write --unsafe",
    "prepack": "pnpm build",
    "docs": "tsx scripts/generate-docs.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "knip": "knip"
  },
  "keywords": [
    "sheet",
    "drawer",
    "modal",
    "stack",
    "zustand",
    "motion",
    "react",
    "animation"
  ],
  "dependencies": {
    "@radix-ui/react-portal": "^1.1.10",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "focus-trap-react": "^12.0.0",
    "motion": "^12.0.0",
    "react-remove-scroll": "^2.7.2",
    "zustand": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "next": "^16.1.6",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0",
    "ultracite": "^7.1.5",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.12.4",
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,jsonc,css}": "biome format --write --no-errors-on-unmatched"
  }
}
